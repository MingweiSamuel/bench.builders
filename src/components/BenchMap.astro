---
import { SITES } from "../data";

interface Props {
  highlightSiteId?: number;
  height?: string | null;
}

const { highlightSiteId } = Astro.props;
const height = Astro.props.height || "600px";

const sites = await SITES;
---

<bench-map data-sites={JSON.stringify(sites)} data-highlight={highlightSiteId}>
  <a class="hidden-nav before" href="#">Skip after map</a>
  <div style={`height: ${height};`}></div>
  <a class="hidden-nav after" href="#">Skip before map</a>
</bench-map>
<script>
  import "leaflet/dist/leaflet.css";
  import "leaflet.markercluster/dist/MarkerCluster.css";

  import L, { MarkerClusterGroup, type TileLayerOptions } from "leaflet";
  import "leaflet.markercluster";
  import type { BenchStatus, Site } from "../data";
  import { darkMode } from "../browser";
  import * as proposed from "../pages/proposed.[color].svg";
  import { MAX_BOUNDS, MAX_ZOOM } from "../pages/tile/[d].[z].[x].[yr].png";
  import type { LayerGroup, MarkerOptions } from "leaflet";

  const COLOR_BAD = "#b10202";
  const COLOR_OK = "#215a6c";
  const COLOR_GOOD = "#11734b";
  const COLOR_WARN = "#753800";

  function makeIcon(color: string, text?: string): L.DivIcon {
    const div = document.createElement("div");
    div.style.setProperty("--bgColor", color);
    div.innerText = text || "";

    return new L.DivIcon({
      html: div.outerHTML, // Using `div` directly doesn't work as it can only exist once in the DOM.
      className: "pin",
      iconSize: [22, 22],
      iconAnchor: [11, 22 * 1.5],
      popupAnchor: [0, -20],
    });
  }

  class BenchMap extends HTMLElement {
    connectedCallback() {
      // Read the message from the data attribute.
      const sites: Site[] = JSON.parse(this.dataset.sites!);

      const [iconBad, iconOk, iconGood, iconWarn] = [
        COLOR_BAD,
        COLOR_OK,
        COLOR_GOOD,
        COLOR_WARN,
      ].map((color) => makeIcon(color));
      const icons = {
        Good: iconGood,
        Replaced: iconOk,
        ["Attention Needed"]: iconWarn,
        Removed: iconBad,
        Destroyed: iconBad,
      };
      const proposedIcons = proposed.COLORS.map((hex) =>
        L.icon({
          iconUrl: `/proposed.${hex}.svg`,
          iconSize: [14, 22],
          iconAnchor: [1, 22],
          popupAnchor: [5, -15],
        }),
      );

      const div = this.getElementsByTagName("div")[0]!;
      const map = L.map(div, {
        center: [37.83, -122.3],
        zoom: 11,
        maxZoom: MAX_ZOOM,
        maxBounds: MAX_BOUNDS,
        maxBoundsViscosity: 1.0,
      });
      L.tileLayer(`/tile/{d}.{z}.{x}.{y}{r}.png`, {
        maxZoom: MAX_ZOOM,
        attribution: import.meta.env.PUBLIC_MAP_ATTRIBUTION,
        d: () => (darkMode() ? "d" : "l"),
      } as TileLayerOptions).addTo(map);

      const clickPopup = L.popup();
      map.on("click", (e) => {
        const { lat, lng } = e.latlng;

        const a = document.createElement("a");
        a.href = "/request?loc=" + encodeURIComponent(`(${lat}, ${lng})`);
        if (this.dataset.embed === "true") {
          a.target = "_top";
        }
        a.innerText = "Request A Bench Here";

        clickPopup.setLatLng(e.latlng).setContent(a).openOn(map);
      });

      const benchesGroup = L.markerClusterGroup({
        showCoverageOnHover: false,
        disableClusteringAtZoom: MAX_ZOOM,
        maxClusterRadius: 10,
        iconCreateFunction(cluster) {
          const childCount = cluster.getChildCount();
          const benchStatuses = cluster
            .getAllChildMarkers()
            .map(
              (m) => (m.options as { benchStatus: BenchStatus }).benchStatus,
            );

          let color = COLOR_WARN;
          if (benchStatuses.every((s) => "Good" === s || "Replaced" === s)) {
            color = COLOR_GOOD;
          } else if (
            benchStatuses.every((s) => "Removed" === s || "Destroyed" === s)
          ) {
            color = COLOR_BAD;
          }

          return makeIcon(color, "" + childCount);
        },
      }).addTo(map);
      const proposedGroup = L.layerGroup();

      const layerControl = L.control.layers().addTo(map);
      layerControl.addOverlay(benchesGroup, "Benches");
      layerControl.addOverlay(proposedGroup, "Proposed Locations");

      for (const site of sites) {
        let scale = 0;
        let icon;
        let group: LayerGroup | MarkerClusterGroup;
        if ("Proposed" === site.benchStatus) {
          const c = 0.04;
          scale = Math.log2(c * site.avgWeekdayBoardings + 1);
          scale /= Math.log2(c * 200 + 1); // Scale so that 200 riders is 100%.
          scale = Math.max(0, Math.min(1, scale));
          const idx = Math.floor(scale * (proposedIcons.length - 1));
          icon = proposedIcons[idx];
          group = proposedGroup;
        } else {
          icon = icons[site.benchStatus];
          group = benchesGroup;
        }
        console.assert(
          null != icon,
          `Unknown bench status: ${site.benchStatus}`,
        );

        const marker = L.marker([site.lat, site.lon], {
          icon,
          benchStatus: site.benchStatus,
        } as MarkerOptions).addTo(group);

        let head: Node = document.createTextNode(site.name || "Unknown");
        if (null != site.id) {
          const a = document.createElement("a");
          a.href = `/${site.id}`;
          const target = new URLSearchParams(window.location.search).get(
            "target",
          );
          a.target = /_[a-z]+/i.test(target!) ? target! : "_self";
          a.appendChild(head);
          head = a;
        }

        const popupDiv = document.createElement("div");
        {
          const h3 = document.createElement("h3");
          h3.appendChild(head);
          const p = document.createElement("p");
          if ("Proposed" === site.benchStatus) {
            p.innerText = `Proposed (relative ridership: ${Math.round(100 * scale)}%)`;
          } else {
            p.innerText = `Status: ${site.benchStatus}`;
          }
          popupDiv.appendChild(h3);
          popupDiv.appendChild(p);
        }

        const popup = marker.bindPopup(popupDiv);
        if (this.dataset.highlight === `${site.id}`) {
          popup.openPopup();
          map.setView([site.lat, site.lon], MAX_ZOOM);
        }
      }
    }
  }

  customElements.define("bench-map", BenchMap);

  document
    .querySelector<HTMLAnchorElement>(".hidden-nav.before")!
    .addEventListener("click", (e) => {
      e.preventDefault();
      document.querySelector<HTMLAnchorElement>(".hidden-nav.after")!.focus();
    });
  document
    .querySelector<HTMLAnchorElement>(".hidden-nav.after")!
    .addEventListener("click", (e) => {
      e.preventDefault();
      document.querySelector<HTMLAnchorElement>(".hidden-nav.before")!.focus();
    });
</script>

<style>
  bench-map {
    display: block;
    position: relative;
  }
  .hidden-nav {
    position: absolute;
    left: -9999px;
    background-color: var(--bg-color);
  }
  .hidden-nav:focus {
    left: 0;
    z-index: 9999;
  }
  .hidden-nav.after {
    bottom: 0;
  }
</style>
<style is:global>
  bench-map .pin > div {
    text-align: center;
    font-size: 14px;
    line-height: 22px;

    color: #fff;
  }
  bench-map .pin > div:after {
    content: "";
    display: block;
    position: absolute;
    z-index: -1;

    top: 0;
    width: 100%;
    height: 100%;

    border-radius: 0 60% 100% 45% / 0 45% 100% 60%;
    background-color: var(--bgColor);

    box-sizing: border-box;
    border: 2.2px solid #000;
    transform: scaleY(1.5) rotate(225deg);
  }

  bench-map .pin > div:before {
    content: "";
    display: block;
    position: absolute;
    z-index: -1;

    left: 50%;
    top: 155%;
    width: 100%;
    height: 100%;
    box-sizing: border-box;

    border-radius: 0 60% 100% 45% / 0 45% 100% 60%;
    background: radial-gradient(
      circle at 10% 10%,
      rgba(0, 0, 0, 0.6),
      rgba(0, 0, 0, 0) 70%
    );

    transform-origin: top left;
    transform: matrix(1, 0, -0.5, 0.6, 1, 0) scaleY(1.5) rotate(225deg);
  }
</style>

---
import { Image } from "astro:assets";
import { Markdown } from "@astropub/md";

interface Step {
  text: string;
  img: ImageMetadata;
  width: number;
  alt: string;
}

interface Props {
  steps: Step[];
}
---

<div class="container">
  {
    Astro.props.steps.map(({ text, img, width, alt }) => (
      <figure class="step">
        <Image src={img} {alt} {width} densities={[1, 1.25, 1.5, 2]} />
        <figcaption>
          <Markdown of={text} />
        </figcaption>
      </figure>
    ))
  }
</div>

<style>
  .container {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
  }
  .step {
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: 0;
    margin: 0;

    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .step img {
  }
  .step .caption {
  }
</style>

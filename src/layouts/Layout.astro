---
import "@fontsource-variable/dm-sans";
import { LONG_NAME, SHORT_NAME } from "../vars";

interface Props {
  title?: string | null;
  mainWidth?: string | null;
}

const title =
  null == Astro.props.title
    ? SHORT_NAME
    : `${Astro.props.title} - ${SHORT_NAME}`;

const mainWidth =
  Astro.props.mainWidth ||
  (Astro.props as any).frontmatter?.mainWidth ||
  "800px";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={LONG_NAME} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global define:vars={{ mainWidth }}>
  html {
    font-family: "DM Sans Variable", sans-serif;
    font-size: 16px;

    --bg-color: #fff;
    --txt-color: #111;
    background-color: var(--bg-color);
    color: var(--txt-color);
  }
  a {
    color: #06c;
  }
  .text-lt {
    color: #555;
  }
  @media (prefers-color-scheme: dark) {
    html {
      --bg-color: #13151a;
      --txt-color: #eee;
      background-color: var(--bg-color);
      color: var(--txt-color);
    }
    a {
      color: #7af;
    }
    .text-lt {
      color: #aaa;
    }
    .dark-invert {
      filter: invert(1) hue-rotate(180deg);
    }
  }
  body {
    margin: 0;
  }

  pre {
    white-space: pre-wrap;
  }
  code {
    font-family: "Menlo", "Monaco", "Lucida Console", "Liberation Mono",
      "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Courier New", monospace;
  }

  main,
  body > header {
    margin: auto;
    padding: 0.5rem;
    width: var(--mainWidth);
    max-width: calc(100% - 2rem);
    font-size: 1.25rem;
    line-height: 1.6;
  }
  header .subhead {
    text-align: center;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .actions {
    text-align: center;
  }

  td,
  th {
    padding: 0.2em 0.5em;
  }

  .caption,
  .highlight {
    background-color: rgba(128, 128, 128, 0.1);
    border: 1px solid rgba(128, 128, 128, 0.2);
  }
  @meda prefers-contrast: more {
    .caption,
    .highlight {
      border: 1px solid var(--txt-color) !important;
    }
  }
  .caption {
    max-width: 100%;
  }
  .caption img {
    max-width: 100%;
    height: auto;
  }
  .caption th {
    padding-bottom: 0;
  }
  .caption td {
    padding-top: 0;
  }
  .caption.left {
    float: left;
    margin-right: 1em;
  }
  .caption.right {
    float: right;
    margin-left: 1em;
  }
  .caption.center {
    width: fit-content;
    margin: 0 auto;
  }
  .caption.full {
    clear: both;
  }
  .caption.full img {
    width: 100%;
    height: auto;
  }
  .caption td {
    max-width: 0;
  }

  iframe {
    border: 0;
  }
</style>

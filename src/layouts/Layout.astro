---
import "@fontsource-variable/dm-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="San Francisco Bay Area Bench Collective"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: "DM Sans Variable", sans-serif;
    background: #fff;
    color: #111;
  }
  a {
    color: #06c;
  }
  @media (prefers-color-scheme: dark) {
    html {
      background: #13151a;
      color: #fff;
    }
    a {
      color: #6af;
    }
  }

  pre {
    white-space: pre-wrap;
  }
  code {
    font-family: "Menlo", "Monaco", "Lucida Console", "Liberation Mono",
      "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Courier New", monospace;
  }

  main, header {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    font-size: 20px;
    line-height: 1.6;
  }
  header .subhead {
    text-align: center;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>

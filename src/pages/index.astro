---
import Layout from "../layouts/Layout.astro";
import BenchMap from "../components/BenchMap.astro";

export const prerender = true;
---

<Layout title="SFBA Bench Collective">
  <header>
    <h1>SFBA Bench Collective</h1>
    <p class="subhead">When cities fail to provide benches we <strong>build and install our own</strong>.</p>
  </header>
  <main>
    <h2>Bench Map</h2>
    <BenchMap />
  </main>
</Layout>

<style>
  main, header {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  header .subhead {
    text-align: center;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>

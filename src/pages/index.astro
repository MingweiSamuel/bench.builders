---
import Layout from "../layouts/Layout.astro";
import BenchMap from "../components/BenchMap.astro";
import LinkPreview from "../components/LinkPreview.astro";
import { NEWS } from "../data";
import { SHORT_NAME } from "../vars";
import Link from "../components/Link.astro";

export const prerender = true;

const FIRST_NEWS = (await NEWS)[0]!;
---

<Layout>
  <header>
    <h1>{SHORT_NAME}</h1>
    <p class="subhead">
      When cities fail to provide benches we <strong
        >build and install our own</strong
      >.
    </p>
  </header>
  <main>
    <h3 class="actions">
      <a href="/support">Support The Project</a>
      &bull;
      <Link
        href="https://docs.google.com/forms/d/e/1FAIpQLSeQPKKgqx_tR4Yp9kNynRpriRlsPerugbziuBVWjTHAdff_Kw/viewform"
        >Report A Problem</Link
      >
      &bull;
      <Link
        href="https://docs.google.com/forms/d/e/1FAIpQLSeoh_bZOndFPvSpkW468EsgudlD8OeXM2h7TpL_yCX9HKjH3A/viewform"
        >Request A Bench</Link
      >
    </h3>
    <h2>Bench Map</h2>
    <BenchMap />
    <h2><a href="/news">News</a></h2>
    <LinkPreview url={FIRST_NEWS.url} date={FIRST_NEWS.date} />
  </main>
</Layout>
